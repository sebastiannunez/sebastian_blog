<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sebastian.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Blog Seba</name>
    <description>
       Blog de Sebastian Nuñez
    </description>
    <author email="sebastian@smdm.com" href="http://cordova.io">
        Sebastian Nuñez
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
    
</widget>
